    }
    html+= '<br>'
    html+='<div class="card mt-2" style="font-size: small">'
    html+='<div class="card-header">'
    html+='<strong>'
    html+= 'Object'
    html+='</strong>'
    html+='</div>'
    html+='<div class="card-body" style= "height:350px;overflow:auto">'

    html+= '<pre style=""  > '
    html+= JSON.stringify(dataSet,undefined,2)
    html+= '</pre>'
    html+='</div>'
    html+='</div>'
    $('#ModalbodyHistory').html(html)
  }
</script>